{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2019",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
